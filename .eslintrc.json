{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "amd": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "globals": {
     "atom": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": 0
  },
}
