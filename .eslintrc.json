{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "amd": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended"
    , "plugin:react/recommended"
  ],
  "globals": {
    "atom": true
    , "React": true
  },
  "parserOptions": {
    "ecmaVersion": 6
    , "sourceType": "module"
    , "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": 0,
    "react/react-in-jsx-scope": "off"
  }
}
